@using ThisIsMilkWebApp.Controllers
@model HomeModel

@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<div class="container">
		<row class="row">
			<div class="col-sm float-start">
				<h2>Create Sprint</h2>
			</div>
		</row>
		<row class="row">
			<div class="col-sm">
				<div id="alert-success" class="alert alert-success" role="alert" style="display:none">
				</div>
				<div id="alert-danger" class="alert alert-danger" role="alert" style="display:none">
				</div>
			</div>
		</row>
		<row class="row">
			<div class="col-sm-4">
				Number of Days in Sprint
			</div>
			<div class="col-sm-3">
				<input id="numberOfDaysInSprint" type="number" />
			</div>
		</row>
		<row class="row">
			<div class="col-sm">
				<h3>Create Story</h3>
			</div>
		</row>
		<row class="row">
			<div class="col-sm-3">
				Story Description
			</div>
			<div class="col-sm-3">
				<input id="storyDescription" type="text" />
			</div>
		</row>
		<row class="row">
			<div class="col-sm-3">
				Story Points
			</div>
			<div class="col-sm-3">
				@Html.DropDownList("StoryPoints", Model.StoryPointListItems, new { id = "storyPoints" } )
			</div>
		</row>
		<row class="row">
			<div class="col-sm">
				<input id="btnCreateSprint" type="submit" value="Create Sprint" class="btn btn-primary" onclick="submitSprint()" />
			</div>
		</row>
		<row class="row">
			<div id="sprintsView-Loading" class="text-center" style="display:none">
				<div class="spinner-border" role="status">
					<span class="visually-hidden">Loading...</span>
				</div>
			</div>
		</row>
		<row class="row">
			<div id="sprintsView">
				@await Html.PartialAsync("~/Views/Home/Sprints.cshtml", @Model.Sprints)
			</div>
		</row>
	</div>

</div>

<script src="~/js/sprints.js" type="text/javascript"></script>